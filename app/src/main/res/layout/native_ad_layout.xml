<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="290dp"
    android:background="#e1dede"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:id="@+id/orgin_container"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/or_icon"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/or_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#494747"
        android:singleLine="true"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/or_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="12sp"
        android:textColor="#938d8d"
        android:singleLine="true"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:id="@+id/or_img"
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="125dp"
        android:scaleType="fitXY"
        />
    <Button
        android:id="@+id/or_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="#333AFF"
        android:layout_marginTop="18dp"
        />

</LinearLayout>